<Window x:Class="MailMe.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MailMe"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid Margin="10">

        <TextBox x:Name="EmailBox" Height="40" Width="400" HorizontalAlignment="Center" Margin="0,120,0,150"  />
        <TextBox x:Name="PasswordBox" Height="40" Width="400" HorizontalAlignment="Center" Margin="0,200,0,100"  />
        <Button x:Name="loginButton" Height="20" Width="40" Margin="0,250,0,80" Click="loginButton_Click">Log In</Button>

    </Grid>
</Window>
