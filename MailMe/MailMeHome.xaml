<Window x:Class="MailMe.MailMeHome"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MailMe"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="MailMe" Height="720" Width="1280">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <StackPanel Margin="10"  Grid.Row="2" Grid.RowSpan="2" Grid.Column="1" Orientation="Vertical">
            <Button VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Click="PrimaryButton_Click">Elsődleges</Button>
            <Button VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Click="SocialButton_Click" >Közösségi</Button>
            <Button VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Click="PromotionsButton_Click">Promóciók</Button>
            <Button VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Click="SentButton_Click">Elküldött</Button>
            <Button VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Click="SpamButton_Click">Spam</Button>
        </StackPanel>
        <!--<ListBox Grid.Row="2" Grid.RowSpan="3" Grid.Column="2" x:Name="EmailListBox" >
        </ListBox>-->
        <ListView x:Name="EmailListView" Grid.Row="2" Grid.RowSpan="3" Grid.Column="2" ScrollViewer.CanContentScroll="False" ScrollViewer.VerticalScrollBarVisibility="Visible" MouseDoubleClick="EmailListView_MouseDoubleClick">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    <Setter Property="HorizontalAlignment" Value="Stretch" />
                    <Setter Property="Width" Value="Auto" />
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
    </Grid>
</Window>
